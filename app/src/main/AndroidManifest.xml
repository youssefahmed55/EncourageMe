<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.encourageme">

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/encourage"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/encourage"
        android:supportsRtl="true"
        android:theme="@style/Theme.EncourageMe">
        <activity
            android:name="com.encourage.encourageme.UI.Splash"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.encourage.encourageme.UI.MainActivity"

            android:exported="false"


            ></activity>
        <activity
            android:name="com.encourage.encourageme.UI.Intro"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait"
            ></activity>


        <receiver android:name="com.encourage.encourageme.UI.ReminderBroadcast" />
    </application>

</manifest>